            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ViewAnimationActivity" />
        <activity android:name=".PropertyAnimationActivity" />
        <activity android:name=".ViewPropertyAnimatorActivity" />
        <activity android:name=".AnimatorSetActivity" />
        <activity android:name=".ConstraintSetAnimationActivity" />
